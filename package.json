{
  "name": "nodejs-api-wrapper",
  "version": "1.0.0",
  "description": "A comprehensive Node.js API wrapper with centralized exception handling, middleware management, and structured architecture for building scalable REST APIs.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node index.ts",
    "rabbitmq": "node dist/consumers/index.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:parallel": "jest --config jest.config.js --maxWorkers=50% --maxConcurrency=5",
    "test:parallel:fast": "jest --config jest.config.js --maxWorkers=75% --maxConcurrency=10 --testPathIgnorePatterns=integration --testPathIgnorePatterns=e2e",
    "test:parallel:full": "jest --config jest.config.js --maxWorkers=100% --maxConcurrency=15",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:coverage:watch": "jest --config jest.config.js --coverage --watch",
    "test:coverage:ci": "jest --config jest.config.js --coverage --ci --coverageReporters=text-summary --coverageReporters=lcov",
    "test:coverage:html": "jest --config jest.config.js --coverage --coverageReporters=html",
    "test:coverage:json": "jest --config jest.config.js --coverage --coverageReporters=json",
    "test:coverage:threshold": "jest --config jest.config.js --coverage --coverageThreshold.global.lines=50 --coverageThreshold.global.functions=50",
    "test:coverage:open": "start coverage/lcov-report/index.html || open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc",
    "build:clean": "rimraf dist && npm run build",
    "type-check": "tsc --noEmit",
    "prebuild": "npm run type-check",
    "postinstall": "npm run build",
    "prepare": "husky install",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "wrapper",
    "middleware",
    "exception-handling",
    "rest-api",
    "sutando",
    "orm"
  ],
  "author": {
    "name": "Irfan Mumtaz",
    "email": "im.irfanmumtaz21@gmail.com",
    "url": "https://github.com/irfanmumtaz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/irfan/nodejs-api-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/irfan/nodejs-api-wrapper/issues"
  },
  "homepage": "https://github.com/irfan/nodejs-api-wrapper#readme",
  "dependencies": {
    "amqplib": "^0.10.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "module-alias": "^2.2.3",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "sutando": "^1.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/amqplib": "^0.10.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.5.0"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@controllers": "dist/src/controllers",
    "@cron": "dist/cron",
    "@exceptions": "dist/src/exceptions",
    "@middlewares": "dist/src/middlewares",
    "@models": "dist/src/models",
    "@requests": "dist/src/requests",
    "@resources": "dist/src/resources",
    "@routes": "dist/routes",
    "@services": "dist/src/services",
    "@container": "dist/src/container"
  }
}
